# =====================================================
# YourJob Platform - macOS Development Configuration
# Optimized for Docker Desktop on macOS
# =====================================================

# Application Settings
APP_ENV=development
APP_DEBUG=true
BUILD_TARGET=development
API_RATE_LIMIT=1000

# Database Configuration (optimized for macOS Docker)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=yourjobdb
DB_USER=urjob
DB_PASSWORD=urjobpass123
MYSQL_ROOT_PASSWORD=rootpass123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass123

# JWT Configuration
JWT_SECRET=macos-development-jwt-key-minimum-32-characters-long-for-security
JWT_EXPIRATION=86400000

# Frontend URLs (macOS development)
REACT_APP_API_BASE_URL=http://localhost:8082
REACT_APP_BFF_BASE_URL=http://localhost:8081
BACKEND_URL=http://backend:8082

# Firebase Configuration (optional for development)
# REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
# REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id
# REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
# REACT_APP_FIREBASE_APP_ID=your-firebase-app-id

# Email Configuration (development - use Mailtrap or similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your-mailtrap-username
SMTP_PASSWORD=your-mailtrap-password

# AWS S3 Configuration (optional for development)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=ap-northeast-2
# AWS_S3_BUCKET=yourjob-dev-bucket

# Payment Gateway (development - use test keys)
# TOSS_CLIENT_KEY=test_ck_yourkey
# TOSS_SECRET_KEY=test_sk_yourkey

# Monitoring & Analytics
GRAFANA_PASSWORD=admin123

# macOS Docker Optimization
UID=501
GID=20
DOCKER_MEMORY_LIMIT=4g
DOCKER_CPU_LIMIT=2

# Development Settings
DEV_MOCK_PAYMENTS=true
DEV_SKIP_EMAIL_VERIFICATION=true
DEV_ENABLE_SQL_LOGGING=true

# Crawler Configuration (development)
CRAWLER_USER_AGENT=YourJob-Crawler-Dev/1.0
CRAWLER_MAX_CONCURRENT=2
CRAWLER_DELAY_MS=2000

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Session Configuration
SESSION_SECRET=macos-development-session-secret-key
SESSION_MAX_AGE=7200000

# Logging (verbose for development)
LOG_LEVEL=DEBUG
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=5

# Security (relaxed for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081,http://localhost:8082
TRUSTED_PROXIES=127.0.0.1,::1,172.20.0.0/16
HELMET_CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
HELMET_CSP_STYLE_SRC='self' 'unsafe-inline'

# External APIs (optional)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# SLACK_WEBHOOK_URL=your-slack-webhook-url

# macOS Specific Performance Tuning
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:G1HeapRegionSize=16m
NODE_OPTIONS=--max_old_space_size=2048
GRADLE_OPTS=-Xmx2g -XX:+UseG1GC -Dorg.gradle.daemon=false

# Hot Reload Settings
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false