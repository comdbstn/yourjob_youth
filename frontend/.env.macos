# macOS Development Configuration for Frontend
# Optimized for local development on macOS

# API URLs for local development
REACT_APP_API_BASE_URL=http://localhost:8082
REACT_APP_BFF_BASE_URL=http://localhost:8081

# Firebase Configuration (optional - for testing)
# REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
# REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# REACT_APP_FIREBASE_PROJECT_ID=your-project-id
# REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# REACT_APP_FIREBASE_APP_ID=your_app_id

# Build Settings for Development
NODE_ENV=development
GENERATE_SOURCEMAP=true
REACT_APP_ENV=development

# Development Server Configuration
PORT=3000
HOST=0.0.0.0
BROWSER=none
FAST_REFRESH=true

# Performance Optimization for macOS
WATCHPACK_POLLING=false
CHOKIDAR_USEPOLLING=false

# Memory Management for Node.js on macOS
NODE_OPTIONS=--max_old_space_size=4096

# Webpack Dev Server Configuration
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3000

# Enable Hot Module Replacement
REACT_APP_HMR=true

# Debugging
REACT_APP_DEBUG=true
ESLINT_NO_DEV_ERRORS=true