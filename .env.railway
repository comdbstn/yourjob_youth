# Railway Environment Variables Template
# Copy these to Railway environment variables

# Database (Railway will auto-populate DATABASE_URL)
# DATABASE_HOST=
# DATABASE_PORT=3306
# DATABASE_NAME=
# DATABASE_USER=
# DATABASE_PASSWORD=

# Redis (Railway will auto-populate REDIS_URL)
# REDIS_HOST=
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Application
APP_ENV=production
APP_DEBUG=false
BUILD_TARGET=production
PORT=8080

# JWT - MUST CHANGE FOR PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-production-change-this
JWT_EXPIRATION=86400000

# API URLs (update with actual Railway URLs)
REACT_APP_API_BASE_URL=https://yourjob-backend.railway.app
REACT_APP_BFF_BASE_URL=https://yourjob-bff.railway.app
BACKEND_URL=https://yourjob-backend.railway.app

# Email (configure with real SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# AWS S3 (configure for file uploads)
AWS_REGION=ap-northeast-2
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_S3_BUCKET=your-bucket

# Payment (configure for Toss Payments)
# TOSS_CLIENT_KEY=your-client-key
# TOSS_SECRET_KEY=your-secret-key

# Security
SESSION_SECRET=your-session-secret-production-change-this
CORS_ORIGINS=https://yourjob-frontend.railway.app

# Rate Limiting
API_RATE_LIMIT=1000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100