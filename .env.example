# =====================================================
# YourJob Platform - Environment Configuration
# Copy this file to .env and configure with your values
# =====================================================

# Application Settings
APP_ENV=production
APP_DEBUG=false
BUILD_TARGET=production
API_RATE_LIMIT=1000

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=yourjobdb
DB_USER=urjob
DB_PASSWORD=your-secure-db-password
MYSQL_ROOT_PASSWORD=your-secure-root-password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRATION=86400000

# Frontend URLs
REACT_APP_API_BASE_URL=http://localhost:8082
REACT_APP_BFF_BASE_URL=http://localhost:8081
BACKEND_URL=http://backend:8082

# Firebase Configuration (for push notifications, analytics etc)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-firebase-app-id

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=your-s3-bucket-name

# Payment Gateway (Toss Payments)
TOSS_CLIENT_KEY=your-toss-client-key
TOSS_SECRET_KEY=your-toss-secret-key

# Monitoring & Analytics
GRAFANA_PASSWORD=your-grafana-admin-password

# Docker User (for development)
UID=1000
GID=1000

# SSL/TLS (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Crawler Configuration
CRAWLER_USER_AGENT=YourJob-Crawler/1.0
CRAWLER_MAX_CONCURRENT=5
CRAWLER_DELAY_MS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=3600000

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
TRUSTED_PROXIES=127.0.0.1,::1
HELMET_CSP_SCRIPT_SRC='self' 'unsafe-inline'
HELMET_CSP_STYLE_SRC='self' 'unsafe-inline'

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SLACK_WEBHOOK_URL=your-slack-webhook-url-for-alerts

# Development Only
DEV_MOCK_PAYMENTS=false
DEV_SKIP_EMAIL_VERIFICATION=false
DEV_ENABLE_SQL_LOGGING=false