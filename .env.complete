# =====================================================
# YourJob Platform - Complete Environment Configuration
# Copy this file to .env and configure with your values
# =====================================================

# Application Settings
APP_ENV=development
APP_DEBUG=true
BUILD_TARGET=development
API_RATE_LIMIT=1000
APP_DOMAIN=http://localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=yourjobdb
DB_USER=urjob
DB_PASSWORD=urjobpass123
MYSQL_ROOT_PASSWORD=rootpass123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass123

# JWT Configuration
JWT_SECRET=macos-development-jwt-key-minimum-32-characters-long-for-security
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8082
SERVER_SSL_ENABLED=false
SERVER_SSL_KEY_STORE=
SERVER_SSL_KEY_STORE_PASSWORD=
SERVER_SSL_KEY_STORE_TYPE=PKCS12
SERVER_SSL_KEY_ALIAS=tomcat

# Frontend URLs
REACT_APP_API_BASE_URL=http://localhost:8082
REACT_APP_BFF_BASE_URL=http://localhost:8081
BACKEND_URL=http://backend:8082

# Firebase Configuration (optional)
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=

# Email Configuration (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=yourjob-dev-bucket

# OAuth2 Configuration
OAUTH_REDIRECT_URI=http://localhost:3000/login/oauth2/code
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Payment Gateway (Toss Payments)
TOSS_CLIENT_KEY=
TOSS_SECRET_KEY=

# Monitoring & Analytics
GRAFANA_PASSWORD=admin123

# Docker Configuration
UID=501
GID=20
DOCKER_MEMORY_LIMIT=4g
DOCKER_CPU_LIMIT=2

# Upload Configuration
UPLOAD_TMP_DIR=/app/temp-uploads

# Storage Configuration
STORAGE_USE_S3=false

# Development Settings
DEV_MOCK_PAYMENTS=true
DEV_SKIP_EMAIL_VERIFICATION=true
DEV_ENABLE_SQL_LOGGING=true

# Crawler Configuration
CRAWLER_USER_AGENT=YourJob-Crawler-Dev/1.0
CRAWLER_MAX_CONCURRENT=2
CRAWLER_DELAY_MS=2000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Session Configuration
SESSION_SECRET=macos-development-session-secret-key
SESSION_MAX_AGE=7200000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=5

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081,http://localhost:8082
TRUSTED_PROXIES=127.0.0.1,::1,172.20.0.0/16
HELMET_CSP_SCRIPT_SRC='self' 'unsafe-inline' 'unsafe-eval'
HELMET_CSP_STYLE_SRC='self' 'unsafe-inline'

# External APIs
GOOGLE_MAPS_API_KEY=
SLACK_WEBHOOK_URL=

# Performance Tuning
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:G1HeapRegionSize=16m
NODE_OPTIONS=--max_old_space_size=2048
GRADLE_OPTS=-Xmx2g -XX:+UseG1GC -Dorg.gradle.daemon=false

# Hot Reload Settings
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Frontend Development Settings
PORT=3000
HOST=0.0.0.0
BROWSER=none
FAST_REFRESH=true
REACT_APP_ENV=development
GENERATE_SOURCEMAP=true
REACT_APP_HMR=true
REACT_APP_DEBUG=true
ESLINT_NO_DEV_ERRORS=true
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3000